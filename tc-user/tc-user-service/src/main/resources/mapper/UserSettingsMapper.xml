<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tcyh.user.mapper.UserSettingsMapper">

    <select id="selectSettingsByUserId" resultType="com.tcyh.user.entity.UserSettings">
        SELECT * FROM user_settings WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <select id="selectSettingByUserAndKey" resultType="com.tcyh.user.entity.UserSettings">
        SELECT * FROM user_settings WHERE user_id = #{userId} AND setting_key = #{settingKey}
    </select>

</mapper>
